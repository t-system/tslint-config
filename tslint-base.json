{
  "rules": {
    "align": [true, "arguments", "elements", "members", "parameters", "statements"],
    "arrow-parens": true,
    "arrow-return-shorthand": true,
    "await-promise": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "deprecation": true,
    "encoding": true,
    "eofline": true,
    "forin": true,
    "import-spacing": true,
    "indent": [true, "spaces", 4],
    "interface-over-type-literal": true,
    "label-position": true,
    "linebreak-style": [true, "LF"],
    "max-line-length": [true, 120],
    "no-arg": true,
    "no-bitwise": false,
    "no-conditional-assignment": true,
    "no-console": [true,
      "log",
      "time",
      "timeEnd"
    ],
    "no-construct": true,
    "no-consecutive-blank-lines": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-duplicate-import": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-floating-promises": true,
    "no-inferrable-types": true,
    "no-inferred-empty-object-type": true,
    "no-internal-module": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-irregular-whitespace": true,
    "no-magic-numbers": true,
    "no-misused-new": true,
    "no-parameter-reassignment": true,
    "no-reference": true,
    "no-string-literal": true,
    "no-switch-case-call-through": true,
    "no-this-assignment": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-unused-expression": [true,  "allow-fast-null-checks"],
    "no-unused-variable": true,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    "no-var-keyword": true,
    "object-literal-shorthand": true,
    "object-literal-sort-keys":[true, "ignore-case", "match-declaration-order"],
    "one-line": [true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "only-arrow-functions": [true, "allow-named-functions"],
    "ordered-imports": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "prefer-const": true,
    "prefer-function-over-method": [true, "allow-public"],
    "prefer-template": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "radix": true,
    "restrict-plus-operands": true,
    "semicolon": true,
    "space-before-function-paren": [true, "never"],
    "trailing-comma": [true, {
      "multiline" : "never",
       "singleline": "never"
    }],
    "triple-equals": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": [true, "check-format", "ban-keywords"],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-rest-spread",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  }
}
